#include <stdio.h>

int main() {
    float altura;
    char sexo;
    
    printf("Digite a altura (em metros): ");
    scanf("%f", &altura);
    printf("Digite o sexo (M/F): ");
    scanf(" %c", &sexo);
    
    if (sexo == 'M' || sexo == 'm') {
        printf("Peso ideal: %.1f kg\n", 72.7 * altura - 58);
    } else if (sexo == 'F' || sexo == 'f') {
        printf("Peso ideal: %.1f kg\n", 62.1 * altura - 44.7);
    } else {
        printf("Sexo invalido!\n");
    }
    
    return 0;
}
